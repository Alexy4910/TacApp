<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recycler_view_li_container"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:padding="6dp"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/chargement_above_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".3"
        android:orientation="vertical"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/ville_name_recycler_view"
            style="@style/Fragment_TextStyle"
            android:layout_width="match_parent"
            tools:text="Inventaire 1" />

        <TextView
            android:id="@+id/qte"
            style="@style/Fragment_TextStyle"
            android:layout_width="match_parent"
            tools:text="QuantitÃ© : 500" />
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".05" />

    <TextView
        android:id="@+id/comptage"
        style="@style/Fragment_TextStyle"
        android:layout_width="0dp"
        android:layout_weight=".1"
        android:textColor="@color/red"
        tools:text="1 / 3" />

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".05" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".5"
        android:orientation="vertical"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/emplacement"
            style="@style/Fragment_TextStyle"
            android:layout_width="match_parent"
            tools:text="Emplacement 3" />

        <TextView
            android:id="@+id/hauteur"
            style="@style/Fragment_TextStyle"
            android:layout_width="match_parent"
            tools:text="Hauteur : 1" />

    </LinearLayout>

</LinearLayout>