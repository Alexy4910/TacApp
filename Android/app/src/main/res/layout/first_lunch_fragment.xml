<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:focusableInTouchMode="true">
    <TextView
        android:id="@+id/home_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenue dans WeatherStation!!\n Ajoute dans la liste chaque ville dont tu souhaites voir la météo!"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_margin="20dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/add_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/home_title"
        android:orientation="horizontal"
        android:weightSum="1">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".2" />

        <EditText
            android:id="@+id/city_new"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".6"
            android:hint="@string/search_city"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:textSize="20sp" />

        <Button
            android:id="@+id/add_city_plus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="+"
            android:layout_weight=".2" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/add_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/add_city"
        android:orientation="horizontal"
        android:weightSum="1">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".2" />

        <EditText
            android:id="@+id/img"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".6"
            android:hint="@string/search_city"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:textSize="20sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".2" />
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_city"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/add_img"
        android:layout_above="@id/valider_liste"
        android:layout_margin="20dp"
        android:background="@drawable/recyclerview_border"/>

    <Button
        android:id="@+id/valider_liste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="@string/valider"
        android:layout_margin="20dp"/>

</RelativeLayout>